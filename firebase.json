{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": {
    "source": ".",
		"ignore": [
			"firebase.json",
			"firebase-debug.log",
      "app/**",
			"**/.*",
			"**/node_modules/**",
			"components/**",
			"helpers/**",
			"pages/**",
			"public/**",
			"firestore.rules",
			"readme.md"
		],
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint"
    ]
  },
  "hosting": [
		{
			"site": "opatola-website.web.app",
			"public": "public/",
			"cleanUrls": true,
			"rewrites": [
				{
					"source": "**",
					"function": "nextjs-server"
				}
			]
		}
	],
  "storage": {
    "rules": "storage.rules"
  },
  "emulators": {
    "auth": {
      "port": 9099
    },
    "functions": {
      "port": 5001
    },
    "firestore": {
      "port": 8080
    },
    "hosting": {
      "port": 5000
    },
    "storage": {
      "port": 9199
    },
    "ui": {
      "enabled": true
    }
  }
}
